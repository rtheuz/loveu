rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir leitura pública para timeline e mensagens
    match /timeline/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /messages/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Permitir leitura e escrita para photos (álbum de fotos)
    match /photos/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Outras coleções podem ter regras mais restritivas
    match /{document=**} {
      allow read, write: if false;
    }
  }
}